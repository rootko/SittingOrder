            android:layout_toRightOf= "@+id/textW_priezvisko"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TVid"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
