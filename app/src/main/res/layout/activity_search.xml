<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sk.halmi.sittingorder.VyhladajZamestnanca">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TVhladajPodla"
            android:text="@string/TV_textHladajPodla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TVmeno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TV_textMeno" />
        <EditText
            android:id="@+id/ETmeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf= "@+id/textW_meno"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TVpriezvisko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TV_textPriezvisko" />
        <EditText
            android:id="@+id/ETpriezvisko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf= "@+id/textW_priezvisko"/>
    </LinearLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:drawable/bottom_bar"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01">

        <Button

            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="Zrus"
            android:id="@+id/zrus"
            android:layout_weight="1.0" />

        <Button

            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="Potvrd"
            android:id="@+id/enter"
            android:layout_weight="1.0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TVvysledok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TV_textVysledok" />
        <EditText
            android:id="@+id/editText_vysledok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf= "@+id/edit_vysledok"/>
    </LinearLayout>



</LinearLayout>
