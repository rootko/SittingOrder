<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_tono"
    android:nestedScrollingEnabled="false"
    android:longClickable="false" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0px"
        android:layout_weight="0.4"
        android:layout_height="wrap_content"
        android:text="BUDOVA:"
        android:id="@+id/budova"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="0px"
        android:layout_weight="0.6"
        android:layout_height="55dp"
        android:id="@+id/spinnerBudova"
        android:entries="@array/budovaArray"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0px"
        android:layout_weight="0.4"
        android:layout_height="wrap_content"
        android:text="POSCHODIE:"
        android:id="@+id/poschodie"
        android:textStyle="bold" />
    <Spinner
        android:layout_width="0px"
        android:layout_weight="0.6"
        android:layout_height="55dp"
        android:id="@+id/spinnerPoschodie"
        />


</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MIESTNOSTI:"
        android:id="@+id/MiestnostiText"
        android:textStyle="italic" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zoznamMiestnosti"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>